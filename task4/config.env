# config envs
HADOOP_HOME=/opt/hadoop
HIVE_SITE.XML_javax.jdo.option.ConnectionURL=jdbc:postgresql://postgres:5433/metastore
HIVE_SITE.XML_javax.jdo.option.ConnectionDriverName=org.postgresql.Driver
HIVE_SITE.XML_javax.jdo.option.ConnectionUserName=hive
HIVE_SITE.XML_javax.jdo.option.ConnectionPassword=hive
HIVE_SITE.XML_datanucleus.autoCreateSchema=false
HIVE_SITE.XML_hive.metastore.uris=thrift://metastore:9083

