HDFS_SITE.XML_dfs.replication=1
HDFS_SITE.XML_dfs.permissions.superusergroup=users
HDFS_SITE.XML_dfs.namenode.name.dir=file:///hadoop/dfs/name
HDFS_SITE.XML_dfs.datanode.data.dir=file:///hadoop/dfs/data
